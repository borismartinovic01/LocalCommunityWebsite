<div class="container" id="pdfKont">
    <div class="top-bar d-flex justify-content-center mb-1" id="topBar">
        <button class="btn btn-dark" id="prev-page">
            <i class="fas fa-arrow-circle-left"></i> Prethodna
        </button>
        <span class="page-info font-weight-bold mt-1 ml-3 mr-3">
            Strana <span id="page-num"></span> od <span id="page-count"></span>
        </span>
        <button class="btn btn-dark" id="next-page">
            Sledeća <i class="fas fa-arrow-circle-right"></i>
        </button>
    </div>
    <div class="d-flex justify-content-center" id="preKanvasa"><canvas id="pdf-render"></canvas></div>
    <div class="d-flex justify-content-center mb-5">
        <a class="btn btn-dark text-white font-weight-bold" asp-action="istorija" asp-controller="home">Nazad na prošlost</a>
    </div>
</div>
