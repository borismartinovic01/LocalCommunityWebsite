@model SponzorCreateViewModel
@{
    ViewBag.Title = "SponzorCreate";
}
<div class="telo">
    <form enctype="multipart/form-data" asp-controller="administration" asp-action="SponzorCreate" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Naziv" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Naziv" class="form-control" placeholder="Naziv" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Adresa" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Adresa" class="form-control" placeholder="Adresa" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Telefon" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Telefon" class="form-control" placeholder="Telefon" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Opcionalno" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Link" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Link" class="form-control" placeholder="Opcionalno" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Instagram" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Instagram" class="form-control" placeholder="Opcionalno" />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Facebook" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Facebook" class="form-control" placeholder="Opcionalno" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Twitter" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Twitter" class="form-control" placeholder="Opcionalno" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Slika" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Slika" class="form-control custom-file-input" />
                    <label class="custom-file-label">Izaberite sliku...</label>
                    <span asp-validation-for="Slika" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="mx-auto">
                <button type="submit" class="btn btn-primary m-1">Postavi</button>
                <a asp-action="sponzori" asp-controller="home" class="btn btn-danger text-white m-1">Odustani</a>
            </div>
        </div>
        @section Scripts{
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
</div>
