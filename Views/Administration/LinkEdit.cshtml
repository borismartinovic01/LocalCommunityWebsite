@model LinkEditViewModel
@{
    ViewBag.Title = "Izmijeni";
}
<div class="telo">
    <form enctype="multipart/form-data" asp-controller="administration" asp-action="LinkEdit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <div class="form-group row">
            <label asp-for="Naslov" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Naslov" class="form-control" placeholder="Name" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Li" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="4" asp-for="Li"></textarea>
                <span asp-validation-for="Li" class="text-danger"></span>
            </div>
        </div>   
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="mx-auto">
                <button type="submit" class="btn btn-primary m-1">Izmeni</button>
                <a asp-controller="home" asp-action="Linkovi" class="btn btn-danger text-white m-1">Odustani</a>
            </div>
        </div>
    </form>
</div>
